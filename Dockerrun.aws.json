{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "somleng-logs",
      "host": {
        "sourcePath": "/var/log/containers/somleng"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "somleng",
      "image": "dwilkie/somleng",
      "essential": true,
      "memory": 950,
      "mountPoints": [
        {
          "sourceVolume": "somleng-logs",
          "containerPath": "/usr/src/app/log"
        }
      ],
      "portMappings": [
        {
          "hostPort": 9050,
          "containerPort": 9050,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
              "awslogs-group": "awslogs-adhearsion",
              "awslogs-region": "ap-southeast-1",
              "awslogs-stream-prefix": "awslogs-adhearsion"
          }
      },
      "environment": [
        {
          "name": "SECRETS_BUCKET_NAME",
          "value": "somlengsecrets"
        },
        {
          "name": "SECRETS_FILE_NAME",
          "value": "somleng_config.txt"
        }
      ]
    }
  ]
}
